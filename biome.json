{
	"$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
	"files": {
		"include": ["src", "scripts"],
		"ignore": ["node_modules"]
	},
	"linter": {
		"include": ["src", "scripts"],
		"ignore": ["node_modules"],
		"rules": {
			"suspicious": {
				"useValidTypeof": "off",
				"noExplicitAny": "off",
				"noAssignInExpressions": "off"
			},
			"style": {
				"noParameterAssign": "off",
				"useEnumInitializers": "off",
				"useSingleVarDeclarator": "off",
				"noCommaOperator": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"attributePosition": "auto",
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineEnding": "lf",
		"lineWidth": 80,
		"include": ["src", "scripts"],
		"ignore": ["node_modules"]
	},
	"organizeImports": {
		"include": ["src", "scripts"],
		"ignore": ["node_modules"]
	}
}
