{
	"$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
	"files": {
		"include": ["src/**/*.ts", "index.ts"],
		"ignore": ["node_modules"]
	},
	"linter": {
		"include": ["src/**/*.ts", "index.ts"],
		"ignore": ["node_modules"],
		"rules": {
			"suspicious": {
				"useValidTypeof": "off",
				"noExplicitAny": "off"
			},
			"style": {
				"noParameterAssign": "off"
			}
		}
	},
	"formatter": {
		"include": ["src/**/*.ts", "index.ts"],
		"ignore": ["node_modules"]
	},
	"organizeImports": {
		"include": ["src/**/*.ts", "index.ts"],
		"ignore": ["node_modules"]
	}
}
