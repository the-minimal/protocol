{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["ESNext", "WebWorker"],
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "outDir": "out",
    "sourceMap": true
  },
  "include": ["src", "scripts"],
  "exclude": ["node_modules", "dist", "coverage", "docs"]
}
