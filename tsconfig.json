{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "WebWorker"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@types": [
        "types.ts"
      ],
      "@utils": [
        "utils.ts"
      ]
    }
  },
  "include": ["src", "tests","index.ts"],
  "exclude": ["node_modules"]
}
