{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["ESNext", "WebWorker"],
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true
  },
  "include": ["src", "tests", "scripts"],
  "exclude": ["node_modules", "dist", "coverage", "docs"]
}
